@using Glass.Mapper.Sc.Web.Mvc
@using Agency.Feature.Services.Models


@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<ServicesContainer>

@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Services Container - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <section id="services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading text-uppercase">@Editable(x => x.Title)</h2>
                        <h3 class="section-subheading text-muted">@Editable(x => x.SubTitle)</h3>
                    </div>
                </div>
                
                <div class="row text-center">
                    @Html.Sitecore().Placeholder("service-item")
                </div>                

            </div>

        </section>
    }
}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">@Model.Title</h2>
                    <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
                </div>
            </div>

            <div class="row text-center">
                @Html.Sitecore().Placeholder("service-item")
            </div>

        </div>
    </section>
}
