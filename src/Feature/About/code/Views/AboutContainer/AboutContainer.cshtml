@using Glass.Mapper.Sc.Web.Mvc
@using Agency.Feature.About.Models

@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<AboutContainer>

@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>About Container - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <section id="about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading text-uppercase">@Editable(x => x.Title)</h2>
                        <h3 class="section-subheading text-muted">@Editable(x => x.SubTitle)</h3>
                    </div>
                </div>

                <div class="col-lg-12">
                    <ul class="timeline">
                        @Html.Sitecore().Placeholder("about-item")
                    </ul>
                </div>

            </div>

        </section>
    }
}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">@Model.Title</h2>
                    <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
                </div>
            </div>

            <div class="col-lg-12">
                <ul class="timeline">
                    @Html.Sitecore().Placeholder("about-item")
                </ul>
            </div>

        </div>
    </section>
}