@using Glass.Mapper.Sc.Web.Mvc
@using Agency.Feature.About.Models

@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<TeamContainer>

@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Team Containet - No datasource found, please associate a datasource</p>
    }
    else
    {
        <section class="bg-light" id="team">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading text-uppercase">@Editable(x => x.Title)</h2>
                        <h3 class="section-subheading text-muted">@Editable(x => x.SubTitle)</h3>
                    </div>
                </div>
                <div class="row">
                    @Html.Sitecore().Placeholder("team-item")
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <p class="large text-muted">@Editable(x => x.Text)</p>
                </div>
            </div>
        </section>
    }
}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <section class="bg-light" id="team">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">@Model.Title</h2>
                    <h3 class="section-subheading text-muted">@Model.SubTitle</h3>
                </div>
            </div>
            <div class="row">
                @Html.Sitecore().Placeholder("team-item")
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <p class="large text-muted">@Model.Text</p>
            </div>
        </div>
    </section>
}
