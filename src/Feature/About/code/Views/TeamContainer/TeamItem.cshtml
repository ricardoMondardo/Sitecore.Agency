@using Glass.Mapper.Sc.Web.Mvc
@using Agency.Feature.About.Models

@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<TeamItem>

@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Team Item - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <div class="col-sm-4">
            <div class="team-member">
                @RenderImage(x => x.Image, isEditable: true, parameters: new { @Class = "mx-auto rounded-circle" })
                <h4>@Editable(x => x.FirstName)</h4>
                <p class="text-muted">@Editable(x => x.Role)</p>
                <ul class="list-inline social-buttons">
                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.LinkTwitter, null, true))
                        {
                            <i class="fa fa-twitter"></i>
                        }
                    </li>
                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.LinkFacebook, null, true))
                        {
                            <i class="fa fa-facebook"></i>
                        }
                    </li>
                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.LinkLinkedin, null, true))
                        {
                            <i class="fa fa-linkedin"></i>
                        }
                    </li>
                </ul>
            </div>
        </div>
    }
}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <div class="col-sm-4">
        <div class="team-member">
            @RenderImage(x => x.Image, isEditable: false, parameters: new { @Class = "mx-auto rounded-circle" })
            <h4>@Model.FirstName</h4>
            <p class="text-muted">@Model.Role</p>
            <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                    @if (Model.LinkTwitter != null)
                    {
                        <a href="@Model.LinkTwitter.Url">
                            <i class="fa fa-twitter"></i>
                        </a>
                    }
                </li>
                <li class="list-inline-item">
                    @if (Model.LinkFacebook != null)
                    {
                        <a href="@Model.LinkFacebook.Url">
                            <i class="fa fa-facebook"></i>
                        </a>
                    }
                </li>
                <li class="list-inline-item">
                    @if (Model.LinkLinkedin != null)
                    {
                        <a href="@Model.LinkLinkedin.Url">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
}